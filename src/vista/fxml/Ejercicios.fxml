<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="537.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.EjerciciosController">
   <children>
      <VBox alignment="TOP_CENTER" styleClass="nada">
         <children>
            <VBox>
               <children>
                  <HBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0">
                     <children>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Buscar ejercicio" textFill="#b2b2b2">
                                    
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textBuscarEjercicio" onAction="#obtener" onKeyTyped="#consumeDigits" prefHeight="40.0" prefWidth="130.0" promptText="Buscar ejercicio" />
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Seleccionar ejercicio" textFill="#b2b2b2">
                                    
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <ComboBox fx:id="comboEjercicios" maxWidth="1.7976931348623157E308" minWidth="150.0" onAction="#mostrar" prefHeight="40.0" promptText="EJERCICIOS" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label text="Información del ejercicio" textFill="#757575">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <VBox styleClass="title">
                     <children>
                        <Label text="Nombre" textFill="#b2b2b2">
                              
                                 <padding>
                              <Insets left="6.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="textNombre" onKeyTyped="#consumeDigits" promptText="Nombre" />
                     </children>
                  </VBox>
                  <VBox styleClass="title">
                     <children>
                        <Label text="Descripción del ejercicio" textFill="#b2b2b2">
                           <padding>
                              <Insets left="6.0" />
                           </padding>
                        </Label>
                        <TextArea fx:id="textDescripcion" onKeyTyped="#consumeDigits" promptText="Descripción del ejercicio (500 caracteres)" wrapText="true" />
                     </children>
                  </VBox>
                  <VBox styleClass="title">
                     <children>
                        <Label text="Comentarios o indicaciones acerca de este ejercicio" textFill="#b2b2b2">
                           <padding>
                              <Insets left="6.0" />
                           </padding>
                        </Label>
                        <TextArea fx:id="textComentarios" onKeyTyped="#consumeDigits" promptText="Comentarios o indicaciones acerca de este ejercicio (500 caracteres)" wrapText="true" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <JFXButton onAction="#eliminar" text="Eliminar" />
                        <JFXButton onAction="#limpiar" text="Limpiar" />
                        <JFXButton onAction="#modificar" text="Modificar" />
                        <JFXButton onAction="#registrar" text="Registrar" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
