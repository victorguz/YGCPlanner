<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ClienteController">
   <children>
      <VBox styleClass="nada">
         <children>
            <VBox>
               <children>
                  <ImageView fx:id="img" fitHeight="172.0" fitWidth="146.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../imagen/icono/man.png" />
                     </image>
                  </ImageView>
                  <FlowPane styleClass="flowpane">
                     <children>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Nombre" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textNombre" onKeyTyped="#consumeDigits" prefHeight="27.0" prefWidth="110.0" promptText="Nombre" />
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Apellido" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textApellido" onKeyTyped="#consumeDigits" prefHeight="27.0" prefWidth="110.0" promptText="Apellido" />
                           </children>
                        </VBox>
                        <HBox>
                           <children>
                              <VBox styleClass="title">
                                 <children>
                                    <Label text="T. doc." textFill="#b2b2b2">
                                       <padding>
                                          <Insets left="6.0" />
                                       </padding>
                                    </Label>
                                    <ComboBox fx:id="comboTipoDoc" prefHeight="27.0" promptText="CC" />
                                 </children>
                              </VBox>
                              <VBox styleClass="title">
                                 <children>
                                    <Label text="N° documento" textFill="#b2b2b2">
                                       <padding>
                                          <Insets left="6.0" />
                                       </padding>
                                    </Label>
                                    <TextField fx:id="textDocumento" onKeyTyped="#consumeIntegers" prefHeight="27.0" prefWidth="100.0" promptText="N° documento" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <VBox styleClass="title">
                                 <children>
                                    <Label text="Edad" textFill="#b2b2b2">
                                       <padding>
                                          <Insets left="6.0" />
                                       </padding>
                                    </Label>
                                    <TextField fx:id="textEdad" onKeyTyped="#consumeDigits" prefHeight="27.0" prefWidth="50.0" promptText="Edad" />
                                 </children>
                              </VBox>
                              <VBox styleClass="title">
                                 <children>
                                    <Label text="Sexo" textFill="#b2b2b2">
                                       <padding>
                                          <Insets left="6.0" />
                                       </padding>
                                    </Label>
                                    <ComboBox fx:id="comboSexo" prefHeight="27.0" promptText="Hombre" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </FlowPane>
                  <FlowPane hgap="10.0" styleClass="flowpane">
                     <children>
                        <JFXButton onAction="#registrar" text="Registrar">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../imagen/icono/newb.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                        <JFXButton onAction="#modificar" text="Modificar">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../imagen/icono/update1b.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                        <JFXButton onAction="#limpiar" text="Limpiar">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../imagen/icono/clearb.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                        <JFXButton onAction="#eliminar" text="Eliminar">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../imagen/icono/xb.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                     </children>
                  </FlowPane>
               </children>
            </VBox>
            <VBox>
               <children>
                  <FlowPane hgap="10.0" styleClass="flowpane">
                     <children>
                        <ToggleButton id="sidebuttons" fx:id="buttonBienvenida" alignment="BASELINE_LEFT" text="Bienvenida" textFill="#757575" />
                        <ToggleButton id="sidebuttons" fx:id="buttonMedidas" alignment="BASELINE_LEFT" text="Medidas" textFill="#757575" />
                        <ToggleButton id="sidebuttons" fx:id="buttonEstadisticas" alignment="BASELINE_LEFT" text="Estadísticas" textFill="#757575" />
                        <JFXCheckBox fx:id="checkRutina" checkedColor="#2ba3ff" contentDisplay="GRAPHIC_ONLY" style="-fx-border-color: rgb(230,230,230); -fx-border-radius: 4;" text="Entrenamiento">
                           <graphic>
                              <ComboBox fx:id="comboRutinas" prefWidth="200.0" promptText="Plan de entrenamiento" />
                           </graphic>
                        </JFXCheckBox>
                        <JFXCheckBox fx:id="checkDieta" checkedColor="#2ba3ff" contentDisplay="GRAPHIC_ONLY" style="-fx-border-color: rgb(230,230,230); -fx-border-radius: 4;" text="Alimentación">
                           <graphic>
                              <ComboBox fx:id="comboDietas" prefWidth="200.0" promptText="Plan de alimentación" />
                           </graphic>
                        </JFXCheckBox>
                     </children>
                  </FlowPane>
                  <ListView fx:id="listView" prefHeight="152.0" prefWidth="400.0" />
                  <JFXButton onAction="#imprimir" text="Imprimir">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../imagen/icono/pdfb.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
