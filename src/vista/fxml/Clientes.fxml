<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/8.0.171"
           fx:controller="controlador.ClienteController">
    <children>
        <VBox styleClass="vbox-fondo">
            <children>
                <VBox styleClass="vbox-blanco">
                    <children>
                        <ImageView fx:id="img" fitHeight="172.0" fitWidth="146.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../../imagen/icono/man.png"/>
                            </image>
                        </ImageView>
                        <FlowPane styleClass="flowpane-centrado">
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Nombre" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textNombre" onKeyTyped="#consumeDigits" prefWidth="110.0"
                                                   promptText="Nombre"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Apellido" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textApellido" onKeyTyped="#consumeDigits" prefWidth="110.0"
                                                   promptText="Apellido"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Tipo de documento" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <ComboBox fx:id="comboTipoDoc" promptText="Cédula de ciudadanía"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="N° documento" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textDocumento" onKeyTyped="#consumeIntegers" prefWidth="100.0"
                                                   promptText="N° documento"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Edad" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textEdad" onKeyTyped="#consumeDigits" prefWidth="50.0"
                                                   promptText="Edad"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Sexo" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <ComboBox fx:id="comboSexo" promptText="Hombre"/>
                                    </children>
                                </VBox>
                            </children>
                        </FlowPane>
                        <FlowPane fx:id="botones" alignment="CENTER" hgap="10.0" styleClass="flowpane">
                            <children>
                                <Button onAction="#eliminar" styleClass="delete-button" text="Eliminar">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../imagen/icono/xb.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button onAction="#limpiar" text="Limpiar">
                                    <graphic>
                                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../imagen/icono/clearb.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button onAction="#modificar" text="Modificar">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../imagen/icono/updateb.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button onAction="#registrar" text="Registrar">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../imagen/icono/doneb.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </FlowPane>
                    </children>
                </VBox>
                <VBox styleClass="vbox-blanco">
                    <children>
                        <FlowPane styleClass="flowpane-centrado">
                            <children>
                                <ToggleButton id="sidebuttons" fx:id="buttonBienvenida" alignment="BASELINE_LEFT"
                                              text="Bienvenida" textFill="#757575"/>
                                <ToggleButton id="sidebuttons" fx:id="buttonMedidas" alignment="BASELINE_LEFT"
                                              text="Medidas" textFill="#757575"/>
                                <ToggleButton id="sidebuttons" fx:id="buttonDieta" alignment="BASELINE_LEFT"
                                              text="Alimentacion" textFill="#757575"/>
                                <ToggleButton id="sidebuttons" fx:id="buttonRutina" alignment="BASELINE_LEFT"
                                              text="Entrenamiento" textFill="#757575"/>
                            </children>
                        </FlowPane>
                        <Button graphicTextGap="10.0" onAction="#imprimir" text="Imprimir">
                            <graphic>
                                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/pdfb.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
