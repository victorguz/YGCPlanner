<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="537.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ConfigController">
   <children>
      <VBox alignment="TOP_CENTER" styleClass="nada">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label text="Información de la pagina inicial" textFill="#757575">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Teléfonos" textFill="#b2b2b2">
                                    
                                       <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <HBox alignment="CENTER">
                                 <children>
                                    <TextField fx:id="textTel1" onKeyTyped="#consumeTel" promptText="Teléfono 1" />
                                    <JFXCheckBox fx:id="checkWhatsapp1" text="Whatsapp" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Página web" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textWeb1" onKeyTyped="#consumeWeb" promptText="Página web 2" />
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Correo electrónico" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textCorreo1" onKeyTyped="#consumeCorreo" promptText="Correo electrónico 1" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Instagram" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textInsta1" onKeyTyped="#consumeWeb" promptText="Instagram 1" />
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Facebook" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textFace1" onKeyTyped="#consumeWeb" promptText="Facebook 1" />
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Twitter" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textTwitter1" onKeyTyped="#consumeWeb" promptText="Twitter 1" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <JFXCheckBox fx:id="checkdash" selected="true" text="Activar dash al inicio" />
                     </children>
                  </HBox>
                  <Label text="Información de la pagina de bienvenida" textFill="#757575" />
                  <VBox styleClass="title">
                     <children>
                        <Label text="Titulo bienvenida" textFill="#b2b2b2">
                           <padding>
                              <Insets left="6.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="textTitulo" onKeyTyped="#consumeDigits" promptText="Titulo de la bienvenida" />
                     </children>
                  </VBox>
                  <VBox styleClass="title">
                     <children>
                        <Label text="Mensaje de bienvenida" textFill="#b2b2b2">
                           <padding>
                              <Insets left="6.0" />
                           </padding>
                        </Label>
                        <TextArea fx:id="textBienvenida" onKeyTyped="#consumeDigits" promptText="Mensaje de bienvenida (500 caracteres)" wrapText="true" />
                     </children>
                  </VBox>
                  <JFXButton onAction="#modificar" text="Guardar configuración" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
