<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefWidth="537.0" styleClass="vbox-fondo" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ConfigController">
    <children>
        <VBox styleClass="vbox-blanco">
            <children>
            <Label text="Configuraciones de la aplicación" textFill="#757575" />
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Activar bienvenida al iniciar la app" textFill="#b2b2b2" wrapText="true">
                     <padding>
                        <Insets left="6.0" />
                     </padding>
                  </Label>
                      <CheckBox fx:id="checkdash" selected="true" GridPane.columnIndex="1" />
               </children>
            </GridPane>
                <Label text="Configuración del documento PDF" textFill="#757575">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <FlowPane styleClass="flowpane-centrado">
                    <children>
                        <VBox>
                            <children>
                                <HBox alignment="CENTER" />
                            </children>
                        </VBox>
                        <VBox />
                        <VBox />
                    </children>
                </FlowPane>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                          <Label text="Teléfono" textFill="#b2b2b2">

                              <padding>
                                  <Insets left="6.0" />
                              </padding>
                          </Label>
                            <TextField fx:id="textTel1" onKeyTyped="#consumeTel" promptText="Teléfono" GridPane.columnIndex="1" />
                          <Label text="Instagram" textFill="#b2b2b2" GridPane.columnIndex="2">
                              <padding>
                                  <Insets left="6.0" />
                              </padding>
                          </Label>
                          <TextField fx:id="textInsta1" onKeyTyped="#consumeWeb" promptText="Instagram" GridPane.columnIndex="3" />
                          <Label text="Facebook" textFill="#b2b2b2" GridPane.rowIndex="1">
                              <padding>
                                  <Insets left="6.0" />
                              </padding>
                          </Label>
                          <TextField fx:id="textFace1" onKeyTyped="#consumeWeb" promptText="Facebook" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
                <Label text="Información de la pagina de bienvenida" textFill="#757575" />
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                        <Label text="Titulo bienvenida" textFill="#b2b2b2" wrapText="true">
                            <padding>
                                <Insets left="6.0" />
                            </padding>
                        </Label>
                        <TextField fx:id="textTitulo" onKeyTyped="#consumeDigits" promptText="Titulo de la bienvenida" GridPane.columnIndex="1" />
                        <Label text="Mensaje de bienvenida" textFill="#b2b2b2" wrapText="true" GridPane.rowIndex="1">
                            <padding>
                                <Insets left="6.0" />
                            </padding>
                        </Label>
                        <TextArea fx:id="textBienvenida" onKeyTyped="#consumeDigits" promptText="Mensaje de bienvenida" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Presentación de plan de entrenamiento" textFill="#b2b2b2" wrapText="true" GridPane.rowIndex="2">
                            <padding>
                                <Insets left="6.0" />
                            </padding>
                        </Label>
                        <TextArea fx:id="textRutina" onKeyTyped="#consumeDigits" promptText="Mensaje de presentación de plan de entrenamiento" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Presentación de plan de alimentación" textFill="#b2b2b2" wrapText="true" GridPane.rowIndex="3">
                            <padding>
                                <Insets left="6.0" />
                            </padding>
                        </Label>
                        <TextArea fx:id="textDieta" onKeyTyped="#consumeDigits" promptText="Mensaje de presentación de plan de alimentación" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
                <VBox />
                <Button onAction="#modificar" text="Guardar configuración" />
            </children>
        </VBox>
    </children>
</StackPane>
