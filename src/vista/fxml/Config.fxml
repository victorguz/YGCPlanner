<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane prefWidth="537.0" styleClass="vbox-fondo" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.ConfigController">
    <children>
        <VBox alignment="TOP_CENTER" styleClass="vbox-blanco">
            <children>
                <Label text="Información de la pagina inicial" textFill="#757575">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
                <FlowPane styleClass="flowpane-centrado">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Teléfono" textFill="#b2b2b2">

                                    <padding>
                                        <Insets left="6.0"/>
                                    </padding>
                                </Label>
                                <HBox alignment="CENTER">
                                    <children>
                                        <TextField fx:id="textTel1" onKeyTyped="#consumeTel" promptText="Teléfono"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Instagram" textFill="#b2b2b2">
                                    <padding>
                                        <Insets left="6.0"/>
                                    </padding>
                                </Label>
                                <TextField fx:id="textInsta1" onKeyTyped="#consumeWeb" promptText="Página web 2"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Facebook" textFill="#b2b2b2">
                                    <padding>
                                        <Insets left="6.0"/>
                                    </padding>
                                </Label>
                                <TextField fx:id="textFace1" onKeyTyped="#consumeWeb" promptText="Facebook 1"/>
                            </children>
                        </VBox>
                    </children>
                </FlowPane>
                <CheckBox fx:id="checkdash" selected="true" text="Activar dash al inicio"/>
                <Label text="Información de la pagina de bienvenida" textFill="#757575"/>
                <VBox>
                    <children>
                        <Label text="Titulo bienvenida" textFill="#b2b2b2">
                            <padding>
                                <Insets left="6.0"/>
                            </padding>
                        </Label>
                        <TextField fx:id="textTitulo" onKeyTyped="#consumeDigits" promptText="Titulo de la bienvenida"/>
                        <Label text="Mensaje de bienvenida" textFill="#b2b2b2">
                            <padding>
                                <Insets left="6.0"/>
                            </padding>
                        </Label>
                        <TextArea fx:id="textBienvenida" onKeyTyped="#consumeDigits"
                                  promptText="Mensaje de bienvenida (300 caracteres)" wrapText="true"/>
                        <Label text="Mensaje de presentación de plan de entrenamiento" textFill="#b2b2b2">
                            <padding>
                                <Insets left="6.0"/>
                            </padding>
                        </Label>
                        <TextArea fx:id="textRutina" onKeyTyped="#consumeDigits"
                                  promptText="Mensaje de presentación de plan de entrenamiento (300 caracteres)"
                                  wrapText="true"/>
                        <Label text="Mensaje de presentación de plan de alimentación" textFill="#b2b2b2">
                            <padding>
                                <Insets left="6.0"/>
                            </padding>
                        </Label>
                        <TextArea fx:id="textDieta" onKeyTyped="#consumeDigits"
                                  promptText="Mensaje de presentación de plan de alimentación (300 caracteres)"
                                  wrapText="true"/>
                    </children>
                </VBox>
                <Button onAction="#modificar" text="Guardar configuración"/>
            </children>
        </VBox>
    </children>
</StackPane>
