            </content>
        </ScrollPane>
    </center>
    <top>
        <StackPane fx:id="footer" BorderPane.alignment="CENTER"/>
    </top>
    <bottom>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <HBox styleClass="vbox-blanco">
                    <children>
                        <ToggleButton id="sidebuttons" fx:id="buttonClientes" contentDisplay="TOP"
                                      onAction="#switchClientes" prefHeight="50.0" prefWidth="100.0" text="Clientes"
                                      textFill="#757575">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.51" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/baseline_face_black_18.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <toggleGroup>
                                <ToggleGroup fx:id="Home"/>
                            </toggleGroup>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonDietas" contentDisplay="TOP"
                                      onAction="#switchDietas" prefHeight="50.0" prefWidth="100.0" text="NutriciÃ³n"
                                      textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.51" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/baseline_favorite_border_black_18.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonRutinas" contentDisplay="TOP"
                                      onAction="#switchRutinas" prefHeight="50.0" prefWidth="100.0" text="Entrenamiento"
                                      textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.51" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/baseline_accessibility_new_black_18.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonAlimentos" contentDisplay="TOP"
                                      onAction="#switchAlimentos" prefHeight="50.0" prefWidth="100.0" text="Alimentos"
                                      textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.51" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/baseline_fastfood_black_18.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonEjercicios" contentDisplay="TOP"
                                      onAction="#switchEjercicios" prefHeight="50.0" prefWidth="100.0" text="Ejercicios"
                                      textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.51" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/baseline_fitness_center_black_18.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonConfig" contentDisplay="TOP"
                                      onAction="#switchConfig" prefHeight="50.0" prefWidth="100.0" text="Configuracion"
                                      textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" opacity="0.51" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/baseline_dashboard_black_18.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>
