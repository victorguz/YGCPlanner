<BorderPane stylesheets="@../estilo/Style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.HomeController">
    <center>
        <ScrollPane fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" pickOnBounds="false" styleClass="root" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
            <content>
                <StackPane fx:id="holderPane" alignment="BASELINE_CENTER" styleClass="back" />
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" styleClass="vbox-blanco">
                    <children>
                        <ToggleButton id="sidebuttons" fx:id="buttonClientes" contentDisplay="GRAPHIC_ONLY" onAction="#switchClientes" styleClass="another-button" text="Clientes" textFill="#757575">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/111652-healthly-lifestyle/png/measuring-tape.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <toggleGroup>
                                <ToggleGroup fx:id="Home" />
                            </toggleGroup>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonDietas" contentDisplay="GRAPHIC_ONLY" onAction="#switchDietas" styleClass="another-button" text="NutriciÃ³n" textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/carrot-and-apple.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonRutinas" contentDisplay="GRAPHIC_ONLY" onAction="#switchRutinas" styleClass="another-button" text="Entrenamiento" textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/running-treadmill.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton id="sidebuttons" fx:id="buttonConfig" contentDisplay="GRAPHIC_ONLY" onAction="#switchConfig" styleClass="another-button" text="Configuracion" textFill="#757575" toggleGroup="$Home">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../imagen/icono/settings%20(1).png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </ToggleButton>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </bottom>
</BorderPane>
