<StackPane prefWidth="537.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.AlimentosController">
    <children>
        <VBox styleClass="vbox-fondo">
            <children>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                            <Label text="Buscar alimento" textFill="#b2b2b2">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textBuscarAlimento" onAction="#obtener" onKeyTyped="#consumeDigits" prefWidth="130.0" promptText="Buscar alimento" GridPane.columnIndex="1" />
                            <Label text="Seleccionar alimento" textFill="#b2b2b2" GridPane.rowIndex="1">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <ComboBox fx:id="comboAlimentos" onAction="#mostrar" promptText="Seleccionar alimento" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Label text="Nombre" textFill="#b2b2b2" GridPane.rowIndex="2">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textNombre" prefWidth="130.0" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <Label text="Proteinas" textFill="#b2b2b2" GridPane.rowIndex="4">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textProteina" prefWidth="130.0" promptText="Proteinas" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            <Label text="Grasas" textFill="#b2b2b2" GridPane.rowIndex="5">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textGrasas" prefWidth="130.0" promptText="Grasas" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            <Label text="Carbohidratos" textFill="#b2b2b2" GridPane.rowIndex="6">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textCarbos" prefWidth="130.0" promptText="Carbohidratos" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            <Label text="Kilocalorias" textFill="#b2b2b2" GridPane.rowIndex="7">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textKilocalorias" editable="false" prefWidth="130.0" promptText="Kilocalorias" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        <Label text="Macronutrientes por cada 100 gramos" textFill="#757575" GridPane.rowIndex="3" />
               </children>
            </GridPane>
                  <Label text="Macronutrientes por gramo" textFill="#757575" />
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                            <Label text="Kilocalorias" textFill="#b2b2b2">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textKilocalorias1" editable="false" prefWidth="130.0" promptText="Kilocalorias" GridPane.columnIndex="1" />
                            <Label text="Proteinas" textFill="#b2b2b2" GridPane.rowIndex="1">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textProteina1" editable="false" prefWidth="130.0" promptText="Proteinas" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <Label text="Grasas" textFill="#b2b2b2" GridPane.rowIndex="2">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textGrasas1" editable="false" prefWidth="130.0" promptText="Grasas" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <Label text="Carbohidratos" textFill="#b2b2b2" GridPane.rowIndex="3">

                                <padding>
                                    <Insets left="6.0" />
                                </padding>
                            </Label>
                            <TextField fx:id="textCarbos1" editable="false" prefWidth="130.0" promptText="Carbohidratos" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
                  <FlowPane fx:id="botones" alignment="CENTER" hgap="10.0" styleClass="flowpane">
                      <children>
                          <Button onAction="#eliminar" styleClass="delete-button" text="Eliminar">
                              <graphic>
                                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../../imagen/icono/xb.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                          <Button onAction="#limpiar" text="Limpiar">
                              <graphic>
                                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../../imagen/icono/clearb.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                          <Button onAction="#modificar" text="Modificar">
                              <graphic>
                                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../../imagen/icono/updateb.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                          <Button onAction="#registrar" text="Registrar">
                              <graphic>
                                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                      <image>
                                          <Image url="@../../imagen/icono/doneb.png" />
                                      </image>
                                  </ImageView>
                              </graphic>
                          </Button>
                      </children>
                  </FlowPane>
            </children>
        </VBox>
    </children>
</StackPane>
