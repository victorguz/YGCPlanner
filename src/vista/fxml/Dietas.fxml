                              <TextField fx:id="textCantidad" onKeyTyped="#consumeDigits" prefHeight="40.0" prefWidth="130.0" promptText="Gramos" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox styleClass="nada">
                           <children>
                              <Label text="Dia de la semana" textFill="#757575">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <FlowPane hgap="10.0" styleClass="flowpane" vgap="10.0">
                                 <children>
                                    <ToggleButton fx:id="buttonDomingo" mnemonicParsing="false" onAction="#getDomingo" onScroll="#updated" onSwipeDown="#updated" onSwipeUp="#updated" text="Domingo">
