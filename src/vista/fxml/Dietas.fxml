                                          <ToggleGroup fx:id="dia" />
                                       </toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="buttonLunes" mnemonicParsing="false" onAction="#getLunes" text="Lunes" toggleGroup="$dia" />
                                    <ToggleButton fx:id="buttonMartes" mnemonicParsing="false" onAction="#getMartes" text="Martes" toggleGroup="$dia" />
                                    <ToggleButton fx:id="buttonMiercoles" mnemonicParsing="false" onAction="#getMiercoles" text="Miercoles" toggleGroup="$dia" />
                                    <ToggleButton fx:id="buttonJueves" mnemonicParsing="false" onAction="#getJueves" text="Jueves" toggleGroup="$dia" />
                                    <ToggleButton fx:id="buttonViernes" mnemonicParsing="false" onAction="#getViernes" text="Viernes" toggleGroup="$dia" />
                                    <ToggleButton fx:id="buttonSabado" mnemonicParsing="false" onAction="#getSabado" text="Sábado" toggleGroup="$dia" />
                                 </children>
                              </FlowPane>
                           </children>
                        </VBox>
                        <VBox styleClass="nada">
                           <children>
                              <Label text="Momento del día" textFill="#757575">
                                 <padding>
                                    <Insets left="6.0" />
