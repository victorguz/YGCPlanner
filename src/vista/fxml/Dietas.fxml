                                       </toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="buttonAlmuerzo" mnemonicParsing="false" onAction="#getAlmuerzo" prefWidth="90.0" text="Almuerzo" toggleGroup="$momento" />
