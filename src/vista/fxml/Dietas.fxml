                        <VBox styleClass="title">
                           <children>
                              <Label text="\% Proteinas" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="textProteinas" onKeyReleased="#porcentajeProteinas" onKeyTyped="#consumeIntegers" prefHeight="40.0" prefWidth="110.0" promptText="\% Proteinas" />
                           </children>
