                           <children>
                              <Label alignment="BASELINE_CENTER" text="Grasas" />
                              <Label fx:id="tFat" alignment="BASELINE_CENTER" text="0.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
