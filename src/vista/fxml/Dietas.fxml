                              <ComboBox fx:id="comboAlimentos" prefHeight="27.0" prefWidth="140.0" promptText="ALIMENTOS" visibleRowCount="5" />
                           </children>
                        </VBox>
                        <VBox styleClass="title">
                           <children>
                              <Label text="Cantidad en gramos" textFill="#b2b2b2">
                                 <padding>
                                    <Insets left="6.0" />
