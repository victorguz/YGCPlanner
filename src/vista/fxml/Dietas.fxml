                              </Label>
                              <TextField fx:id="textCantidad" onKeyTyped="#consumeDigits" prefHeight="27.0" prefWidth="130.0" promptText="Cantidad en gramos" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox styleClass="nada">
                           <children>
                              <Label text="Dia de la semana" textFill="#757575">
                                 <padding>
                                    <Insets left="6.0" />
                                 </padding>
                              </Label>
                              <FlowPane hgap="10.0" styleClass="flowpane" vgap="10.0">
                                 <children>
                                    <ToggleButton fx:id="buttonDomingo" mnemonicParsing="false" onAction="#getDomingo" prefWidth="90.0" selected="true" text="Domingo">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="dias" />
                                       </toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="buttonLunes" mnemonicParsing="false" onAction="#getLunes" prefWidth="90.0" text="Lunes" toggleGroup="$dias" />
