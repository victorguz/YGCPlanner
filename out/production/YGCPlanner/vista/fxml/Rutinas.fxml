<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
           fx:controller="controlador.RutinasController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" styleClass="vbox-fondo">
            <children>
                <VBox styleClass="vbox-blanco">
                    <children>
                        <HBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Buscar plan" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textBuscar" onAction="#obtener" onKeyTyped="#consumeDigits"
                                                   prefWidth="130.0" promptText="Buscar plan"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Seleccionar plan" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <ComboBox fx:id="comboRutinas" maxWidth="200.0" onAction="#mostrar"
                                                  promptText="Seleccionar plan" visibleRowCount="5"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox onMouseMoved="#updated" styleClass="vbox-blanco">
                    <children>
                        <Label text="Información de la dieta" textFill="#757575">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Label>
                        <FlowPane alignment="CENTER" styleClass="flowpane-centrado">
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Nombre" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textNombre" prefWidth="130.0" promptText="Nombre"/>
                                        <Label text="Descripción del plan" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextArea fx:id="textDescripcion" prefHeight="70.0"
                                                  promptText="Descripción del plan (500 caracteres)" wrapText="true"/>
                                    </children>
                                </VBox>
                                <FlowPane fx:id="botones" alignment="CENTER" hgap="10.0" styleClass="flowpane">
                                    <children>
                                        <Button onAction="#eliminar" styleClass="delete-button" text="Eliminar">
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imagen/icono/xb.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button onAction="#limpiar" text="Limpiar">
                                            <graphic>
                                                <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imagen/icono/clearb.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button onAction="#modificar" text="Modificar">
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imagen/icono/updateb.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button onAction="#registrar" text="Registrar">
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imagen/icono/doneb.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </FlowPane>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </FlowPane>
                    </children>
                </VBox>
                <VBox onMouseMoved="#updated" styleClass="vbox-blanco">
                    <children>
                        <Label text="Alimentos de la dieta" textFill="#757575"/>
                        <FlowPane styleClass="flowpane-centrado">
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Buscar ejercicio" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <TextField fx:id="textBuscarEjercicio" onAction="#obtenerEjercicios"
                                                   onKeyTyped="#consumeDigits" prefWidth="130.0"
                                                   promptText="Buscar ejercicio"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Seleccionar ejercicio" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <ComboBox fx:id="comboEjercicios" prefWidth="140.0" promptText="Ejercicios"
                                                  visibleRowCount="5"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Series" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <ComboBox fx:id="comboSeries" promptText="Series" visibleRowCount="5"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Repeticiones" textFill="#b2b2b2">
                                            <padding>
                                                <Insets left="6.0"/>
                                            </padding>
                                        </Label>
                                        <ComboBox fx:id="comboRepeticiones" promptText="Repeticiones"
                                                  visibleRowCount="5"/>
                                    </children>
                                </VBox>
                            </children>
                        </FlowPane>
                        <Label text="Dia de la semana" textFill="#757575">
                            <padding>
                                <Insets left="6.0"/>
                            </padding>
                        </Label>
                        <FlowPane hgap="10.0" styleClass="flowpane-centrado" vgap="10.0">
                            <children>
                                <ToggleButton fx:id="buttonDomingo" mnemonicParsing="false" prefWidth="90.0"
                                              text="Domingo">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="dias"/>
                                    </toggleGroup>
                                </ToggleButton>
                                <ToggleButton fx:id="buttonLunes" mnemonicParsing="false" prefWidth="90.0" text="Lunes"
                                              toggleGroup="$dias"/>
                                <ToggleButton fx:id="buttonMartes" mnemonicParsing="false" prefWidth="90.0"
                                              text="Martes" toggleGroup="$dias"/>
                                <ToggleButton fx:id="buttonMiercoles" mnemonicParsing="false" prefWidth="90.0"
                                              text="Miercoles" toggleGroup="$dias"/>
                                <ToggleButton fx:id="buttonJueves" mnemonicParsing="false" prefWidth="90.0"
                                              text="Jueves" toggleGroup="$dias"/>
                                <ToggleButton fx:id="buttonViernes" mnemonicParsing="false" prefWidth="90.0"
                                              text="Viernes" toggleGroup="$dias"/>
                                <ToggleButton fx:id="buttonSabado" mnemonicParsing="false" prefWidth="90.0"
                                              text="Sábado" toggleGroup="$dias"/>
                            </children>
                        </FlowPane>
                        <Label text="Bloque de ejercicios*" textFill="#757575">
                            <padding>
                                <Insets left="6.0"/>
                            </padding>
                        </Label>
                        <FlowPane fx:id="momentos" hgap="10.0" styleClass="flowpane-centrado" vgap="10.0">
                            <children>
                                <ToggleButton fx:id="buttonBloque1" mnemonicParsing="false" onAction="#getBloque1"
                                              prefWidth="90.0" text="Bloque 1">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="momento"/>
                                    </toggleGroup>
                                </ToggleButton>
                                <ToggleButton fx:id="buttonBloque2" mnemonicParsing="false" onAction="#getBloque2"
                                              prefWidth="90.0" text="Bloque 2" toggleGroup="$momento"/>
                                <ToggleButton fx:id="buttonBloque3" mnemonicParsing="false" onAction="#getBloque3"
                                              prefWidth="90.0" text="Bloque 3" toggleGroup="$momento"/>
                                <ToggleButton fx:id="buttonBloque4" mnemonicParsing="false" onAction="#getBloque4"
                                              prefWidth="90.0" text="Bloque 4" toggleGroup="$momento"/>
                                <ToggleButton fx:id="buttonBloque5" mnemonicParsing="false" onAction="#getBloque5"
                                              prefWidth="90.0" text="Bloque 5" toggleGroup="$momento"/>
                            </children>
                        </FlowPane>
                    </children>
                </VBox>
                <VBox onMouseMoved="#updated" styleClass="vbox-blanco">
                    <children>
                        <VBox alignment="CENTER" prefWidth="200.0" styleClass="x">
                            <children>
                                <HBox spacing="10.0">
                                    <children>
                                        <Button onAction="#addEjercicio" pickOnBounds="false" prefWidth="1500.0"
                                                text="Añadir ejercicio al menú">
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imagen/icono/clearb.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <Button onAction="#deleteEjx" pickOnBounds="false" prefWidth="1500.0"
                                                styleClass="delete-button" text="Eliminar ejercicio del menú">
                                            <graphic>
                                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imagen/icono/trash2b.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0"/>
                                    </padding>
                                </HBox>
                                <ListView fx:id="listView" prefHeight="200.0"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
